<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloworld.MainActivity">

    <ImageView
        android:src="@drawable/androidbaby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/hello_word_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="72dp"
        android:padding="8dp"
        android:background="#FF41567E"
        android:textColor="#FFF4EDEA"
        android:textSize="34sp"
        android:fontFamily="sans-serif"
        android:text="Hello World!" />

    <TextView
        android:id="@+id/What_up_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="72dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:background="#FF41567E"
        android:textColor="#FFF4EDEA"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:text="What up?" />

</RelativeLayout>

